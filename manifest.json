{
  "manifest_version": 3,
  "name": "Epic Highlighter",
  "version": "1.0",
  "description": "Highlights elements with data-epic attributes",
  "permissions": [
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "./images/highlight.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}